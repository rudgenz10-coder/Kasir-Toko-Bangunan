<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link href="/css/output.css" rel="stylesheet">
</head>

<body class="p-6 bg-gray-100">

  <div class="max-w-6xl mx-auto bg-white p-6 rounded shadow">

    <div class="flex justify-between mb-4">
      <h1 class="text-2xl font-bold"><%= title %></h1>
      <a href="/stok/create" class="px-4 py-2 bg-blue-600 text-white rounded">+ Tambah</a>
    </div>

    <table class="w-full border">
      <thead class="bg-gray-200">
        <tr>
          <th class="p-2 border">Barang</th>
          <th class="p-2 border">Pemasok</th>
          <th class="p-2 border">Jumlah</th>
          <th class="p-2 border">Tanggal</th>
        </tr>
      </thead>

      <tbody>
        <% stok.forEach(s => { %>
          <tr class="border">
            <td class="p-2 border"><%= s.barang.nama_barang %></td>
            <td class="p-2 border"><%= s.pemasok.nama_supplier %></td>
            <td class="p-2 border"><%= s.jumlah_masuk %></td>
            <td class="p-2 border"><%= s.tanggal_masuk %></td>
          </tr>
        <% }) %>
      </tbody>

    </table>
  </div>

</body>
</html>
