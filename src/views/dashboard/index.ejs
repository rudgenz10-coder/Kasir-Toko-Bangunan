<!-- CHART.JS CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const ctx = document.getElementById('trxChart');

  new Chart(ctx, {
    type: 'line',
    data: {
      labels: <%- JSON.stringify(chartBulan) %>,
      datasets: [{
        label: 'Jumlah Transaksi',
        data: <%- JSON.stringify(chartJumlah) %>,
        borderWidth: 3,
        tension: 0.3,
        borderColor: '#3b82f6',
        backgroundColor: 'rgba(59,130,246,0.3)',
        fill: true,
        pointRadius: 5,
        pointBackgroundColor: '#1d4ed8'
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: { display: true }
      },
      scales: {
        y: { beginAtZero: true },
        x: { grid: { display: false } }
      }
    }
  });
</script>

